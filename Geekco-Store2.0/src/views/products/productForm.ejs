<!DOCTYPE html>
<html lang="en">
<%-include("../partials/head.ejs")%>
<body>
    <%-include("../partials/header.ejs",{title: 'Formulario de Carga de Productos'})%>
    <main class="productForm__main">
        <div class="productForm__div">
            <h2>Formulario de Carga de Productos</h2>
            <form action="/productos/create" method="POST" enctype="multipart/form-data">
                <input class="productForm__input" type="text" id="name" name="name" placeholder="Nombre" required>
                
                <input class="productForm__input" type="number" id="price" name="price" placeholder="Precio" required>

                <input class="productForm__input" type="text" id="franchise" name="discount" placeholder="Descuento">
                
                <input class="productForm__input" type="number" id="limit" name="installments" placeholder="Cuotas">
                
                <input class="productForm__input" type="number" id="stock" name="stock" placeholder="Stock" required>
                
                <textarea class="productForm__input" id="description" name="description" placeholder="Descripción" required></textarea>
                
                <input class="productForm__input" type="text" id="plataform" name="platform" placeholder="Plataforma">
                
                <input class="productForm__input" type="text" id="category" name="category" placeholder="Categoría" required>
               
                <input class="productForm__input__image" type="file" id="image" name="image" placeholder="Imagen" multiple required>
                
                <input class="productForm__input__enviar" type="submit" value="Enviar">
              </form>
        </div>
       
    </main>
    <%-include("../partials/footer.ejs")%>
</body>
</html>