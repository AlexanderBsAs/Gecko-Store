<!DOCTYPE html>
<html lang="en">
  <%-include("../partials/head.ejs",{title: producto.name})%>
  <body class="body" id="header">
    <%-include("../partials/header.ejs")%>
    <main class="main">
      <section class="contenido-producto">
        <article class="articulo_producto_venta">
          <div class="detalle-img">
            <div id="carouselExample" class="carousel slide">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img
                    src="/images/<%= producto.image %>"
                    class="d-block w-100"
                    alt="halo-1.jpg"
                  />
                </div>
                <!-- <div class="carousel-item">
                  <img
                    src="/images/halo-2.jpg"
                    class="d-block w-100"
                    alt="halo-2.jpg"
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="/images/halo-3.jpg"
                    class="d-block w-100"
                    alt="halo-3.jpg"
                  />
                </div> -->
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExample"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExample"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="contenedor-detalle-info">
            <div class="detalle-info">
              <div class="nombre-producto">
                <h3><%= producto.name %></h3>

                <h4 class="precioFinal">$<%= producto.price %></h4>
                <h4>con <%= producto.discount %>% de descuento</h4>
                <h4 class="precioDescuento">
                  $<%= (producto.price - ( producto.price * producto.discount /
                  100)).toFixed(2) %>
                </h4>
                <h4>
                  En cuotas de <%= producto.installments %>x $<%=
                  (producto.price / producto.installments).toFixed(2) %>
                </h4>
              </div>
              <div class="container-button">
                <button
                  class="boton-product boton__comprar color-turquesa flex flex-row"
                >
                  <i class="fas fa-shopping-cart"></i>Comprar Ahora
                </button>
                <button
                  class="boton-product boton__añadir color-violeta flex flex-row"
                >
                  <i class="fas fa-shopping-cart"></i>Añadir al Carrito
                </button>
              </div>
              <div class="contenedor-metodo-pagos">
                Metodos de pago
                <div>
                  <img
                    src="/images/mplogo.webp"
                    height="20px"
                    alt="mododepago"
                  />
                  <img
                    src="/images/visalogo.webp"
                    height="30px"
                    alt="mododepago"
                  />
                  <img
                    src="/images/masterlogo.png"
                    height="25px"
                    alt="mododepago"
                  />
                </div>
              </div>
            </div>
            <!-- <div class="container-button">
                        <button class="boton-product boton__soporte color-turquesa"></i>Soporte</button>
                        <button class="boton-product boton__consultas color-turquesa"></i>Consultas</button>
                    </div> -->
          </div>
        </article>
        <div class="descripcion-producto">
          <h1>Descripción</h1>
          <p><%= producto.description %></p>
        </div>
      </section>
      <section class="contenido-producto">
        <div>
          <h2>Especificaciones del producto</h2>
        </div>
        <div class="contenido-producto-texto-logo">
          <div class="contenido-producto-texto">
            <div class="contenido-producto-texto--contenido">
              <h4 class="conte">Plataforma:</h4>
              <p class="conte"><%= producto.platform %></p>
            </div>
            <!-- <div class="contenido-producto-texto--contenido">
                        <h4 class="conte">Franquicia:</h4>
                        <p class="conte"><%= producto.franchise%></p>
                    </div> -->
            <div class="contenido-producto-texto--contenido">
              <h4 class="conte">Stock:</h4>
              <p class="conte"><%= producto.stock%></p>
            </div>
            <!-- <div class="contenido-producto-texto--contenido">
                        <h4 class="conte">Peso:</h4>
                        <h4 class="conte"><%= producto.weight%></h4>
                    </div> -->
            <!-- <div class="contenido-producto-texto--contenido">
                        <h4 class="conte">Largo:</h4>
                        <h4 class="conte"><%= producto.large%></h4>
                    </div> -->
            <div class="contenido-producto-texto--contenido">
              <h4 class="conte">Categoría:</h4>
              <h4 class="conte"><%= producto.category%></h4>
            </div>
          </div>
          <div>
            <img class="logo2" src="/images/logo.png" alt="logo-2" />
          </div>
        </div>
      </section>
      <section class="contenido-producto">
        <h2>Productos Similares</h2>
        <div class="contenedor-producto-caja">
          <% for(let i = 0; i < 4; i++){ %>
            <% let product = products[Math.floor(Math.random() * products.length)] %>
          <article class="home__main__article">
            <div class="caja-img">
              <img
                class="w-100"
                src="/images/<%- product.image %>"
                alt="<%= product.name %>"
              />
            </div>
            <h3><%= product.name %></h3>
            <h3>$<%= product.price %></h3>
            <h3>Disponibles:<%= product.stock %></h3>
            <p><%= product.description %></p>
            <button class="boton-product color-turquesa flex flex-row">
              <a href="/productos/detalles/<%= product.id  %>">Ver más</a>
            </button>
          </article>
          <% }; %>
        </div>
      </section>
      <section class="contenido-producto">
        <h2>Otros productos que podrían interesarte</h2>
        <div class="contenedor-producto-caja">
          <% for(let i = 0; i < 4; i++){ %>
            <% let product = products[Math.floor(Math.random() * products.length)] %>
          <article class="home__main__article">
            <div class="caja-img">
              <img
                class="w-100"
                src="/images/<%- product.image %>"
                alt="<%= product.name %>"
              />
            </div>
            <h3><%= product.name %></h3>
            <h3>$<%= product.price %></h3>
            <h3>Disponibles: <%= product.stock %></h3>
            <p><%= product.description %></p>
            <button class="boton-product color-turquesa flex flex-row">
              <a href="/productos/detalles/<%= product.id  %>">Ver más</a>
            </button>
          </article>
          <% }; %>
        </div>
      </section>
      <button class="boton-product-2 flex flex-row">
        <a href="#header">Volver arriba</a>
      </button>
    </main>
    <%-include("../partials/footer.ejs")%>
  </body>
