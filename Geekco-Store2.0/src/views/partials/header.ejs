
<header id="header">
        
        <div>
        <a href="/"><img id="logo" src ="/images/logo.png"></img></a>
        <p>GeekcoStore</p> </div>
        <div id="div">
            <form action="/search" method="GET" class="navbar-form">
                <div id="input-container">
                    <input name="keywords" type="text" id="input" placeholder="Buscar productos, marcas...">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
                
            </form>
            <% if (locals.user) { %>
            <% if (locals.user.admin) { %>
                <a href="/productos/productsList">Todos los productos</a>
            <% } %>
            <% } else {%>
                <a class="products-novisible" href="/productos/productsList">Todos los productos</a>
            <% } %>
        </div>
        </nav>
        <button id="abrir" class="abrir-menu"><div class="burger-menu"><i class="fas fa-bars"></i></div></button>
        <nav class="nav" id="nav">
            <ul class="nav-list">
                <li><a href="#Juguetes"> Juguetes</a></li>
                <li><a href="#Video Juegos"> Video Juegos</a></li>
                <li><a href="#Consolas"> Consolas</a></li>
                <li><a href="#Accesorios"> Accesorios</a></li>
                <li><a href="#Juegos de mesa"> Juegos de mesa</a></li>
                <li><a href="#Figuras"> Figuras</a></li>
            </ul>
        </nav>
        </div> 
        
        <nav class="header__nav2">
            <div class="session__header__on">
                              <% if (locals.user) { %>
                    <!-- Mostrar contenido cuando el usuario está autenticado -->
                    <% if (locals.user.admin) { %>
                        <a href=" http://localhost:5173/">Dashboard</a>
                    <% } %>
                  
                    <a href="/users/update/<%= locals.user.id %>"><%= locals.user.first_name %> <%= locals.user.last_name %></a> 
                    <img class="image-perfil" src="/images/users/<%= locals.user.image %>" alt="">

                    <a href="/users/logout">Cerrar sesión <i class="fa-solid fa-right-from-bracket"></i></a>

                </div>
                    <a href="/productos/carrito"><i class="fa-solid fa-cart-shopping" style="color: #ffffff;"></i></a>
                <% } else { %>
                    <!-- Mostrar contenido cuando el usuario no está autenticado -->
                    <span id="abrir__logeo1" class="btn__log"><i class="fa-regular fa-circle-user" style="color: #ffffff;"></i></span>
                    <nav class="header__nav1">
                            <a href="/users/login">Ingresar</a>
                            <a href="/users/registro">Registrarse</a>
                    </nav>
                <% } %> 
            
        </nav>
        <div class="header__gradient"></div>
