<!DOCTYPE html>
<html lang="en">
    <%-include("./partials/head.ejs")%>
<body>
   <%-include("./partials/header.ejs")%>
    <main class="index__main">
        <div class="home__carrousel">
            <ul>
                <li> <img src="/images/banner1.jpg"></img></li>
                <li><img src="/images/freddy.jpg" ></img></li>
                <li><img src="/images/ps4.jpg" ></img></li>
                <li><img src="/images/heman.jpg"></img></li>
            </ul>
          </div>
       <h2 class="title-home-h2">Productos destacados</h2>
        <section>
            <% products.slice(0, 6).forEach (product => { %>
            <article class="card">
                <img id="img1" src="/images/<%= product.image  %>" alt="<%= product.image  %>">
                    <div class="index__cardinfo">
                        <h3><%= product.name %></h3>
                        <h3>$<%= product.price %></h3>
                        <h3>Disponibles: <%= product.stock %></h3>
                        <p class="index__pd"><%= product.description %></p>
                        <button class="boton-product color-turquesa flex flex-row">
                            <a href="/productos/detalles/<%= product.id  %>">Ver m√°s</a>
                        </button>
                    </div>
                </img>
            </article>
            <% }); %>
        </section>
        <div class="header__gradient index__gradient"></div>
        <div class="index__banner2__div">
        <img class="index__banner2" src="/images/banner2.jpg"></img>
        <p>Seccion de computadoras</p>
          </div>
        </main>
        <%-include("./partials/footer.ejs")%>
        <script src="./js/main.js"></script>   
</body>
</html>