<!DOCTYPE html>
<html lang="en">
    <%-include("../partials/head.ejs",{title: 'Todos los productos'})%>

<body>
    <%-include("../partials/header.ejs")%>
    <main class="index__main">
        <h2 class="title-home-h2">Todos los productos</h2>
        <section>
            <% products.forEach (product => { %>
            <article class="card">
                <img id="img1" src="/images/<%= product.image  %>" alt="<%= product.image  %>">
                    <div class="index__cardinfo">
                        <h3><%= product.name %></h3>
                        <h3>$<%= product.price %></h3>
                        <h3>Disponibles: <%= product.stock %></h3>
                        <p class="index__pd"><%= product.description %></p>
                        <button class="boton-product color-turquesa flex flex-row">
                            <a href="/productos/detalles/<%= product.id  %>">Ver m√°s</a>
                        </button>
                    </div>
                </img>
            </article>
            <% }); %>
        </section>
    </main>
    <%-include("../partials/footer.ejs")%>

</body>
</html>