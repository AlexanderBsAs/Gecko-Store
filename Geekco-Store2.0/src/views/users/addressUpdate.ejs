<!DOCTYPE html>
<html lang="en">
  <%-include("../partials/head.ejs",{title: 'Editar Usuario'})%>
  <body class="register-body">
    <%-include("../partials/header.ejs")%>
    <main class="register-main-body">
      <div class="form-box">
        <img class="register-logo" src="/images/logo.png" alt="" />
        <form
          action="/users/passwordUpdate/<%=id%>?_method=PUT"
          class="register-form"
          method="POST"
        >
          <h2>EDITAR DOMICILIO</h2>

          <div class="input-data">
            <label for="country">Pais</label>
            <input type="text" name="country" id="country" value="<%=address.country %>"
            />
            <p>
              <%= locals.errores && errores.passwordActual ?
              errores.passwordActual.msg : null %>
            </p>
          </div>
          <div class="input-data">
            <label for="province">Provincia</label>
            <input
              type="text"
              name="province"
              id="province"
              value="<%=address.province %>"
            />
            <p>
              <%= locals.errores && errores.confirmPassword ?
              errores.confirmPassword.msg : null %>
            </p>
          </div>
          <div class="input-data">
            <label for="city">Ciudad</label>
            <input type="text" name="city" id="city" value="<%=address.city %>"/>
            <p>
              <%= locals.errores && errores.password ? errores.password.msg :
              null %>
            </p>
          </div>
          <div class="input-data">
            <label for="address">Direcci√≥n</label>
            <input
              type="text"
              name="address"
              id="address"
              value="<%=address.address %>"
            />
            <p>
              <%= locals.errores && errores.confirmPassword ?
              errores.confirmPassword.msg : null %>
            </p>
          </div>

          <div class="input-data">
            <button type="submit">Actualizar</button>
          </div>
        </form>
      </div>
    </main>
    <%-include("../partials/footer.ejs")%>
  </body>
</html>
